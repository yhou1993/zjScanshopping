/**app.wxss**/
@import "./utils/icon.wxss";

view,
button,
input,
text,
icon {
    box-sizing: border-box;
}

page {
    height: 100%;
    background-color: #f5f5f5;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    /*noinspection ALL*/
    font-size: 24rpx;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    opacity: 0;
    transform: translateY(100%);
    transition: transform 400ms ease-in-out, opacity 300ms ease-in-out 100ms;
}

.modal.active {
    opacity: 1;
    transform: translateY(0);
}

.modal .mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .5);
}

.line {
    width: 100%;
    height: 1px;
    background-color: #efefef;
}


.btn-area {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.btn-area .button{
    flex:1;
    background: #f41027;
    border-radius: 4px;
    padding: 20rpx 0;
    align-content: center;
    justify-content: center;
}

.btn-area .button text{
    color: #ffffff;
    font-size: 30rpx;
    text-align: center;
    display: block;
}

.notification {
    position: fixed;
    top: 0;
    left: 0;
    padding: 8px;
    width: 100%;
    height: 64px;
    z-index: 2;
    transform: translateY(-100%);
    transition: transform 400ms ease-in-out;
}

.notification.show {
    transform: translateY(0);
}

.notification-content {
    padding-left: 12px;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    border-radius: 4px;
    background-color: #000;
    color: #fff;
}

.notification-content icon {
    margin-right: 12px;
}
