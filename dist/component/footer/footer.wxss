.footer{
    width: 100%;
    height: 120rpx;
    background: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
    border-top: 1px solid #ededed;
    display: flex;
    flex-direction: row;
}
.footerli{
    flex: 1;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.footerico {
    width: 45rpx;
    height: 45rpx;
}

.footerli .footertxt{
    font-size: 20rpx;
    color: #787878;
    margin-top: 10rpx;
}

.footerli.active .footertxt{ color: #f9838f;}